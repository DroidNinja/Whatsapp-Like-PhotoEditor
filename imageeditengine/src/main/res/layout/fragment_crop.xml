<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CropFragment"
    android:background="@color/blackish"
    >

  <ImageView
      android:id="@+id/back_iv"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:padding="10dp"
      android:src="@drawable/ic_cam_back"
      />


  <com.droidninja.imageeditengine.views.cropimage.CropImageView
      xmlns:custom="http://schemas.android.com/apk/res-auto"
      android:id="@+id/image_iv"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_above="@+id/button_bar"/>

  <LinearLayout
      android:id="@+id/button_bar"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:layout_alignParentBottom="true"
      >


    <TextView
        android:id="@+id/cancel_tv"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="CANCEL"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:padding="10dp"
        android:gravity="center"
        />

    <ImageView
        android:id="@+id/rotate_iv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/ic_cam_crop_rotate"
        android:padding="10dp"
        />


    <TextView
        android:id="@+id/done_tv"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="DONE"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:padding="10dp"
        android:gravity="center"
        />

  </LinearLayout>

</RelativeLayout>